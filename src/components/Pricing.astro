---
import { Button } from "@/components/ui/button";
import { CheckIcon, XIcon } from "lucide-react";

interface PricingTier {
  id: string;
  name: string;
  price: string;
  period: string;
  description: string;
  features: string[];
  disabledFeatures: string[];
  highlighted?: boolean;
  cta: string;
  disabled?: boolean;
}

const tiers: PricingTier[] = [
  {
    id: "trial",
    name: "Trial",
    price: "Free",
    period: "for 7 days",
    description: "Perfect for individuals getting started with Marz.",
    features: ["Unlimited users", "Full feature"],
    disabledFeatures: ["Expires after 7 days and needs re-activating"],
    cta: "Get Started",
  },
  {
    id: "individual_1",
    name: "Individual",
    price: "7$",
    period: "for each month",
    description: "For large organizations with specific requirements.",
    features: ["Unlimited users", "Full feature"],
    disabledFeatures: [],
    cta: "Activate now",
    highlighted: true,
  },
];
---

<section id="pricing" class="py-20">
  <div class="text-center mb-16">
    <h2 class="text-4xl font-medium mb-4">Simple, Transparent Pricing</h2>
    <p class="max-w-2xl mx-auto text-muted-foreground text-center">
      Choose the plan that fits your needs.
    </p>
  </div>
  <hr />
  <div
    class="grid grid-cols-1 md:grid-cols-2 mx-auto justify-center gap-0 max-w-240"
  >
    {
      tiers.map((tier, index) => (
        <div
          class:list={[
            "flex flex-col p-8 relative",
            index > 0 ? "border-x" : "border-l",
            tier.highlighted && "bg-primary/[0.02]",
          ]}
        >
          {tier.highlighted && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="bg-primary text-primary-foreground text-xs font-medium px-3 py-1 rounded-full">
                Most Popular
              </span>
            </div>
          )}

          <div class="mb-6">
            <h3 class="text-xl font-semibold mb-2">{tier.name}</h3>
            <div class="flex items-baseline gap-1">
              <span class="text-4xl font-bold">{tier.price}</span>
              {tier.period && (
                <span class="text-muted-foreground">{tier.period}</span>
              )}
            </div>
            <p class="text-muted-foreground mt-3 text-sm">{tier.description}</p>
          </div>

          <ul class="flex-1 space-y-3 mb-8">
            {tier.features.map((feature) => (
              <li class="flex items-start gap-3">
                <CheckIcon className="w-5 h-5 text-primary shrink-0 mt-0.5" />
                <span class="text-sm">{feature}</span>
              </li>
            ))}

            {tier.disabledFeatures.map((feature) => (
              <li class="flex items-start gap-3 opacity-50">
                <XIcon className="w-5 h-5 text-red-500 shrink-0 mt-0.5" />
                <span class="text-sm">{feature}</span>
              </li>
            ))}
          </ul>

          <a href={`/activation?plan=${tier.id}`} class="cursor-pointer">
            <Button
              variant={tier.highlighted ? "default" : "outline"}
              className="w-full"
              disabled={!!tier.disabled}
            >
              {tier.cta}
            </Button>
          </a>
        </div>
      ))
    }
  </div>
  <hr />
  <p class="text-center py-2 text-sm font-medium opacity-50">
    Pricing will be updated soon *
  </p>
  <hr />
</section>
